<h2><%= resource_name.to_s.humanize %>情報を<%=t 'edit_user.edit' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %><%=t 'edit_user.leave_blank_password' %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %><%=t 'edit_user.characters_minimum' %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><%=t 'edit_user.need_password' %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('edit_user.update') %>
  </div>
<% end %>

<h3><%=t 'edit_user.cancel_my_account' %></h3>

<p><%=t 'edit_user.unhappy' %> <%= button_to t('edit_user.cancel_accout_botton'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<%= link_to t('links.back'), :back %>
