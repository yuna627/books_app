<p id="notice"><%= notice %></p>

<h1><%=t 'index_page_title' %></h1>
<%= link_to t('links.new_book'), new_book_path %>

<table>
  <thead>
    <tr>
      <th><%=Book.human_attribute_name(:title) %></th>
      <th><%=Book.human_attribute_name(:memo) %></th>
      <th><%=Book.human_attribute_name(:author) %></th>
      <th><%=Book.human_attribute_name(:picture) %></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('links.show'), book %></td>
        <td><%= link_to t('links.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('links.destroy'), book, method: :delete, data: { confirm: t('delite_confirmation') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>
